{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "fonts/**",
          "arabe_community/**",
          "node_modules/@sparticuz/chromium/**",
          "node_modules/puppeteer-core/**",
          "node_modules/@puppeteer/browsers/**",
          "node_modules/ws/**",
          "node_modules/@sparticuz/chromium/bin/**",
          "node_modules/@sparticuz/chromium/lib/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ]
}


