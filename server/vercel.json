{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "fonts/**",
          "arabe_community/**",
          "node_modules/@sparticuz/chromium/**",
          "node_modules/puppeteer-core/**",
          "node_modules/@puppeteer/browsers/**",
          "node_modules/ws/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 60
    }
  }
}


