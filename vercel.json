{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.ts", "use": "@vercel/node", "config": { "includeFiles": ["server/fonts/**", "server/arabe_community/**"] } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "src": "/assets/(.*)", "dest": "/client/assets/$1" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}
